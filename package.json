{
  "name": "angular-web-components",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "webcomponent": "http-server dist -a localhost -p 4300",
    "build": "ng build --prod --output-hashing=none && node build-webcomponents.js && rm -rf dist/webcomponents",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.2.14",
    "@angular/cdk": "^11.2.13",
    "@angular/common": "~11.2.14",
    "@angular/compiler": "~11.2.14",
    "@angular/core": "~11.2.14",
    "@angular/elements": "^11.2.14",
    "@angular/forms": "~11.2.14",
    "@angular/material": "^11.2.13",
    "@angular/platform-browser": "~11.2.14",
    "@angular/platform-browser-dynamic": "~11.2.14",
    "@angular/router": "~11.2.14",
    "document-register-element": "^1.14.10",
    "ngx-moment": "^5.0.0",
    "rxjs": "~6.5.5",
    "sweetalert2": "^11.7.1",
    "ts-md5": "^1.3.1",
    "tslib": "^2.4.1",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.19",
    "@angular/cli": "~11.2.19",
    "@angular/compiler-cli": "~11.2.14",
    "@types/jest": "^29.2.4",
    "@types/node": "^16.11.7",
    "codelyzer": "^6.0.2",
    "concat": "^1.0.3",
    "fs-extra": "^11.1.0",
    "http-server": "^14.1.1",
    "jest": "^29.3.1",
    "jest-preset-angular": "^12.2.3",
    "ts-node": "~10.9.1",
    "tslint": "~6.1.3",
    "typescript": "~4.1.6"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupJest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/src/test.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$'": "<rootDir>/src/$1"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/src/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$"
      }
    }
  }
}
